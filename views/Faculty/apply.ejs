<%- include("nav")  %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apply Criteria</title>
    <style>
        h1 {
            color: white;
        }
        body {
            background: linear-gradient(120deg, #3a7bd5 100%, #3a6073 100%);
            font-family: Arial, sans-serif;
            margin: 0;
            padding-top: 80px;
            height: 100vh;
        }
        .main{
            display: flex;
            justify-content: center;
        }
        .container {
            width: 85%;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            color: black;
        }
        td {
            color: white;
        }
        .btn {
            display: inline-block;
            padding: 6px 12px;
            margin: 4px 2px;
            border-radius: 4px;
            color: white;
            text-align: center;
            cursor: pointer;
            text-decoration: none;
        }
        .btn-view {
            background-color: #4CAF50;
        }
        .btn-edit {
            background-color: #008CBA;
        }
        .btn-toggle {
            background-color: #f44336;
            margin-top: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 40px;
        }
        .hidden-message {
            display: none;
            color: #f44336;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><%= CriteriaName ? CriteriaName : 'No Criteria' %></h1>
        <form action="/faculty/apply" method="post" enctype="multipart/form-data">
            <input type="hidden" name="criteriaId" value="<%= criteriaId %>">
            <table>
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Parameter Name</th>
                        <th>Max Score</th>
                        <th>Self Approve Score</th>
                        <th>Supportive Documents</th>
                    </tr>
                </thead>
                <tbody>
                    <% let totalMaxMarks = 0, totalSelfApproved = 0; %>
                    <% parameters.forEach((param, index) => { %>
                        <% totalMaxMarks += param.parameter_max_marks; %>
                        <% totalSelfApproved += param.marks_by_emp || 0; %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= param.parameter_description %></td>
                            <td><%= param.parameter_max_marks %></td>
                            <td>
                                <input type="number" name="self_approved_<%= param.c_parameter_id %>" 
                                    value="<%= param.marks_by_emp || '' %>" min="0" max="<%= param.parameter_max_marks %>"
                                    oninput="validateInput(this)">
                            </td>
                            <td>
                                <input type="file" name="documents_<%= param.c_parameter_id %>[]"
                                    accept=".pdf,image/*" multiple class="supportive-document">
                            </td>
                        </tr>
                    <% }) %>
                    <tr>
                        <td colspan="2">Total</td>
                        <td><%= totalMaxMarks %></td>
                        <td id="totalSelfApproved"></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <button type="submit">Submit Documents</button>
        </form>

        <!-- Button to Disable Supportive Document Uploads -->
        <button type="button" class="btn btn-toggle" onclick="toggleSupportiveDocuments()">No Proof Available</button>

        <!-- Hidden message for when supportive documents are disabled -->
        <p class="hidden-message" id="supportiveDisabledMessage">Supportive document upload has been disabled as per your request.</p>
    </div>

    <script>
        function validateInput(input) {
            var maxScore = parseInt(input.max);
            var value = parseInt(input.value);

            if (value > maxScore) {
                alert(`The self-approved score cannot exceed the max score ${maxScore}`);
                input.value = ''; // Reset the value
            } else {
                input.setCustomValidity('');
                input.style.borderColor = ""; // Reset the border color
            }

            recalculateTotal();
        }

        function recalculateTotal() {
            var inputs = document.querySelectorAll('input[type="number"]');
            var total = 0;
            for (var i = 0; i < inputs.length; i++) {
                total += parseInt(inputs[i].value) || 0;
            }
            document.getElementById('totalSelfApproved').innerText = total;
        }

        function toggleSupportiveDocuments() {
            var supportiveDocuments = document.querySelectorAll('.supportive-document');
            var message = document.getElementById('supportiveDisabledMessage');

            supportiveDocuments.forEach(function(input) {
                input.disabled = true; // Disable supportive document inputs
            });

            message.style.display = 'block'; // Show the hidden message
        }

        // Initialize the total on page load
        window.onload = recalculateTotal;
    </script>
</body>
</html>
